<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Configuraci칩n del servlet de navegaci칩n -->
    <servlet>
        <servlet-name>NavegacionServlet</servlet-name>
        <servlet-class>NavegationServlet</servlet-class> <!-- Reemplaza com.example por tu paquete real -->
    </servlet>

    <servlet-mapping>
        <servlet-name>NavegacionServlet</servlet-name>
        <url-pattern>/navegacion</url-pattern>
    </servlet-mapping>

    <!-- Configuraci칩n de mapeo de archivos est치ticos -->
    <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>listings</param-name>
            <param-value>false</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/assets/*</url-pattern>
        <url-pattern>/fonts/*</url-pattern>
        <url-pattern>/styles/*</url-pattern>
    </servlet-mapping>

</web-app>
